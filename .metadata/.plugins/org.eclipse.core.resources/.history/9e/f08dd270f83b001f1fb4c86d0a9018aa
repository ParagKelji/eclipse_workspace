package leetcode;

public class JumpGame_1 {
	
	public boolean canJump(int[] nums) {
        boolean isJumpable = false;
        if ( nums == null || nums.length <= 1 ) {
			return isJumpable;
		}
        int end = nums.length - 1;
        int firstJumpMax = nums[0];
        if ( firstJumpMax <= 0 ) {
			return isJumpable;
		}
        if ( firstJumpMax >= end ) {
        	return true;
        }
        int jumpDistance = 0;
        for ( int i = 1; i < firstJumpMax; i++ ) {
        	jumpDistance = i;
        	while ( jumpDistance < end ) {
				jumpDistance += nums[jumpDistance];
				if ( jumpDistance >= end ) {
					return isJumpable;
				}
			}
        }
        return isJumpable;
    }
	
	public static void main(String[] args) {
		JumpGame_1 jmpGame = new JumpGame_1();
		int[] nums = {3,2,1,0,4};
		System.out.println(jmpGame.canJump(nums));
	}

}
